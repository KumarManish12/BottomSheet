<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/hello"
        android:textSize="@dimen/margin_15sp"
        android:id="@+id/tvhello"
        android:layout_marginTop="@dimen/size_20dp"
        android:layout_marginStart="@dimen/margin_40dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/there"
        android:layout_toEndOf="@id/tvhello"
        android:layout_marginStart="@dimen/margin_15sp"
        android:layout_marginTop="@dimen/size_20dp"
        android:textSize="@dimen/margin_15sp"
         android:id="@+id/tvthere"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/changename"
        android:layout_centerInParent="true"
        android:id="@+id/btnchangename"
        />


</RelativeLayout>